{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('register') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('register') }}
    {% endblock %}


{% block title %}Mettre à jour un Administrateur{% endblock %}

{% block body %}
    <div class="container">
      <div class="row">
       <div class="vw-100 vh-100 bg-success text-white bg-opacity-80">
            <div class="Inscription">
                <h1>Mettre à jour un Administrateur</h1>
    
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.prenom) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.tel) }}
                    {{ form_row(form.password)}}
            
                    <button type="submit" class="btn">Ajouter</button>
                {{ form_end(form) }}
            </div>
       </div> 
   </div>
</div>
{% endblock %}
